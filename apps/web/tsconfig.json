{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "strict": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@Src/*": [
                "./src/*"
            ],
            "@Assets/*": [
                "./public/assets/*"
            ]
        }
    },
    "include": [
        "src",
        "typescript/global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}